@model RespromedicalMVC.Models.User
@{
    Layout = null;

}
<html>
<head>

    <title>Admin Login</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <link href="~/css/AdminStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" method="post" action="/Admin/VerifyAdmin">
                <span id="reauth-email" class="reauth-email"></span>
                <div class="form-group">
                    @Html.TextBoxFor(u => u.user_email, new { @type = "email", @placeholder = "Email Address", @class = "form-control input-lg", @tabindex = "4" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(u => u.user_password, new { @type = "password", @placeholder = "Password", @class = "form-control input-lg", @tabindex = "6" })
                </div>
                    <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div>
</body>
</html>
<!-- /container -->
