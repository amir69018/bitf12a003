@model List<RespromedicalMVC.Models.Product>
@{
    ViewBag.Title = "ProductsAtAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1 class="header text-center">Products At Admin</h1>

<button class="btn btn-default" data-toggle="modal" data-target="#newCategory">Add new Product Category</button>
<a href="/Admin/NewProduct" class="btn btn-default">Add new Product</a>
<hr />
<div class="container">

    <div class="row text-center">
        <div class="row style_featured">
            @foreach (var v in Model) {
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div class="thumbnail">
                        <img src=@v.path alt="">
                        <div class="caption">
                            <h3>@v.product_name</h3>
                            <p>@v.product_description</p>
                            <p>
                                <a href="/Admin/DeleteProduct/@v.product_id" class="btn btn-warning">Delete</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    

</div>




<div class="modal fade" id="newCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add new Category</h4>
            </div>
            <form action="/Admin/AddNewCategory" method="post" role="form">
                <div class="modal-body">
                    <input type="text" class="input-lg" name="ProductCategoryName" placeholder="Category Name" />
                    <p>&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
