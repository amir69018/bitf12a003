        </div>
    </nav>
    
        @{if (@Session["message"] != null) {
                <div id="message" class="text-center alert alert-info leftrightBasicMargins lead">
                    <p>@Session["message"]</p>
                    </div>
            Session.Contents.Remove("message");

        } }
    
    
    <div id="search">
        <button type="button" class="close">×</button>
        <form action="/Products/SearchProduct" method="post" role="search">
            <input type="search" id="searchbar" name="searchbar" value="" placeholder="type keyword(s) here" />
            <button type="submit" class="btn btn-success btn-lg">Search</button>
        </form>
    </div>
    
    @RenderBody()

    <footer class="footer">
        <div class="container">
            <p class="pull-right"><a href="#">Back to top</a></p>

            <p class="text-muted">&copy; 2014 Company, Inc. &middot; @Html.ActionLink("Privacy", "Aboutus", "Home") &middot; @Html.ActionLink("Terms", "TermsAndConditions", "Home")</p>

        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>