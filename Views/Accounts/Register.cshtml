@model RespromedicalMVC.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="jumbotron" style="background-color: #34495e; color:white;">
    <center>
        <h1>Respro Medical</h1>
        <p class="lead">Create your account below here.</p>
    </center>
</div>
<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form action="/Accounts/AddUser" method="post" role="form">
                    <h2>Please Sign Up <small>It's free and always will be.</small></h2>
                    <hr class="colorgraph">
                    <div class="row">
                        <div id="emailDivFormGroup"></div>

                        <div class="col-xs-12 col-sm-6 col-md-6">

                            <div class="form-group">
                                @Html.TextBoxFor(u => u.user_first_name, new {@placeholder = "First Name" , @class = "form-control input-lg", @tabindex="1" ,@required = "required" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.user_last_name, new { @placeholder = "Last Name", @class = "form-control input-lg", @tabindex = "2", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(u => u.user_address, new { @placeholder = "Address", @class = "form-control input-lg", @tabindex = "3", @required = "required" })
                    </div>
                    <div  class="form-group input-group ">
                        @Html.TextBoxFor(u => u.user_email, new { @type = "email", @placeholder = "Email Address", @id = "emailInputbox", @class = "form-control input-lg", @tabindex = "4", @required = "required" })
                        <span class="input-group-btn">
                            <button id="checkEmail"  class="btn btn-default input-lg" type="button">Check</button>
                        </span>

                     </div>
                    <div class="form-group">
                                                    
                    </div>
                    
                    <div class="row">
                        
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.user_password, new { @type = "password", @placeholder = "Password", @class = "form-control input-lg", @tabindex = "6", @required = "required" })

                        </div>
                       
                    </div>
                    <div class="row">
                       
                        <div class="col-xs-8 col-sm-9 col-md-9">
                            By clicking <strong class="label label-primary">Register</strong>, you agree to the <a href="/Home/TermsAndConditions" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.
                        </div>
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                        <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Sign In</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr>
