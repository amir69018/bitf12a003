@model RespromedicalMVC.Models.User


<div class="jumbotron" style="background-color: #34495e; color: white">
    <center>
        <h1>Respro Medical</h1>
        <p class="lead">Please login to your account or register otherwise.</p>
    </center>
</div>


<div class="container">

    <div class="container">

        <div class="row" style="margin-top:20px; margin-bottom:20px;">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form" action="/Accounts/SubmitLogin" method="post">
                    <fieldset>
                        <h2>Please Sign In</h2>
                        <hr>
                        <div class="form-group">
                            @Html.TextBoxFor(u => u.user_email, new { @type = "email", @placeholder = "Email Address", @class = "form-control input-lg", @tabindex = "4" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(u => u.user_password, new { @type = "password", @placeholder = "Password", @class = "form-control input-lg", @tabindex = "6" })
                        </div>
                        <span class="button-checkbox">
                            <button type="button" class="btn" data-color="info">Remember Me</button>
                            <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
                            <a href="" class="btn btn-link pull-right">Forgot Password?</a>
                        </span>
                        <hr>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                @Html.ActionLink("Register", "Register", "Accounts", new { @class = " btn btn-lg btn-primary btn-block" })</div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <hr>
            
            
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title"><b>New Customer</b></h3>
                </div>
                <div class="panel-body" style="background-color:#e7fdfe">
                    <p>If you don't have an account, please proceed by clicking the following button to continue first-time registration. </p>
                    @Html.ActionLink("Register", "Register", "Accounts", new { @class = "btn btn-primary" })

                </div>
            </div>

        </div>
    </div>


</div>
<hr>