@model RespromedicalMVC.Models.Query
@{
    ViewBag.Title = "ContactUs";
}

<div class="jumbotron wow flash"  style="background-color: #3498db; color: white;">
    <center>
        <h1>Respro Medical</h1>
        <p class="lead">Get our information from below here or contact us directly for inquiry.  </p>
    </center>
</div>

<div class="row" style="background-color:#f0f0f0;">
    <div class="col-sm-8">
        <div id="map1" class="map" style="height:400px;">
        </div>
    </div>
    <div class="col-sm-4 ">
        <h2>Our Office</h2>
        <address>
            <strong>Respro Medical</strong>
            <br>118, Century Tower
            <br>Kalma Chowk, Lahore Pk.
            <br>
        </address>
        <address>
            <span class="glyphicon glyphicon-phone"></span> <abbr title="Phone">P:</abbr>(+92) 322 4181410
            <br>
            <span class="glyphicon glyphicon-envelope"></span> <abbr title="Email">E:</abbr> <a href="mailto:#">respromedical@gmail.com</a>
        </address>
    </div>
</div><hr />
    <div class="container wow fadeInDown" >
        
        <div class="row">
            <div class="col-md-5">
                <div class="well well-sm">
                    <form class="form-horizontal" action="/Home/SubmitMessage" method="post">
                        <fieldset>
                            <legend class="text-center header">Contact us</legend>
                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-1">
                                    @Html.TextBoxFor(u => u.name, new { @placeholder = "Name", @class = "form-control input-lg", @tabindex = "1" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-1">
                                    @Html.DropDownListFor(model => model.department, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "Customer Care"  },
                       new { value = 1 , text = "Diagnostic Service" },
                       new { value = 2 , text = "Repairing Service"}
                    },
                  "value",
                  "text",
                   5), new { @class = "form-control input-lg" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-1">
                                    @Html.TextBoxFor(u => u.email, new { @type = "email", @placeholder = "Email Address", @class = "form-control input-lg", @tabindex = "1" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-1">
                                    @Html.TextBoxFor(u => u.contact, new { @placeholder = "Contact Number", @class = "form-control input-lg", @tabindex = "1" })


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-1">
                                    @Html.TextAreaFor(u => u.message, new { rows = 10, @placeholder = "Enter your massage for us here. We will get back to you within 2 business days.", @class = "form-control input-lg", @tabindex = "1" })


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            
        </div>
    </div>

    <hr />

    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script type="text/javascript">
        jQuery(function ($) {
            function init_map1() {
                var myLocation = new google.maps.LatLng(31.505027, 74.331967);
                var mapOptions = {
                    center: myLocation,
                    zoom: 16
                };
                var marker = new google.maps.Marker({
                    position: myLocation,
                    title: "Property Location"
                });
                var map = new google.maps.Map(document.getElementById("map1"),
                    mapOptions);
                marker.setMap(map);
            }
            init_map1();
        });
    </script>
