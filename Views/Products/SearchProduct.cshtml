@model List<RespromedicalMVC.Models.Product>
@{
    ViewBag.Title = "SearchProduct";
}


<div class="jumbotron" style="background-color: #ecf0f1">
    <center>
        <h1>A Warm Welcome!</h1>
        <p class="lead">We live to serve. Providing the best quality medical products at lowest prices since 2010.</p>
    </center>
</div>

<div class="container leftrightBasicMargins">
    <div class="row">
        <div class="col-lg-12">
            <h3>Search Results...</h3>
        </div>
    </div>



    <div class="row text-center ">
            <div class="row style_featured">
                <div class="col-lg-12">
                </div>
                @if(Model.Count == 0){
                <p class="alert alert-danger lead alert-dismissible" >No result found.</p>
                }
                else{
                foreach (var products in Model) {
                        <div class="col-md-3 col-sm-6 hero-feature">
                            <div class="thumbnail">
                                <img src=@products.path alt="">
                                <div class="caption">
                                    <h3>@products.product_name</h3>
                                    <p>@products.product_description</p>
                                    <p>
                                        <a href="/Products/PlaceOrder/@products.product_id" class="btn btn-warning">Order Now!</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
      

    </div>
</div>
<hr>