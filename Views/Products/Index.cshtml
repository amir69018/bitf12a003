@model RespromedicalMVC.Models.ProductsWithCategory
@{
    ViewBag.Title = "Products";
}


<div class="jumbotron" style="background-color: #ecf0f1">
    <center>
        <h1>A Warm Welcome!</h1>
        <p class="lead">We live to serve. Providing the best quality medical products at lowest prices since 2010.</p>
    </center>
</div>

<div class="container leftrightBasicMargins">
    <div class="row">
        <div class="col-lg-12">
            <h3>Latest Products</h3>
        </div>
    </div>



    <div class="row text-center ">
        @foreach (var categories in Model.categoryList) {
            <div class="row style_featured">
                <div class="col-lg-12">
                    <h3>@categories.product_category_name</h3>
                </div>
                @foreach (var products in Model.productList) {
                    if (products.product_category_id == categories.product_category_id) {
                        <div class="col-md-3 col-sm-6 hero-feature">
                            <div class="thumbnail">
                                <img src=@products.path alt="">
                                <div class="caption">
                                    <h3>@products.product_name</h3>
                                    <p>@products.product_description</p>
                                    <p>
                                        <a href="/Products/PlaceOrder/@products.product_id" class="btn btn-primary">Order Now!</a> <a href="#" class="btn btn-default">More Info</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }

    </div>
</div>
<hr>